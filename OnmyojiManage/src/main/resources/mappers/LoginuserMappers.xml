<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.mapper.LoginUserMapper">

    <!--用户登陆 #{login_User_Name},#{login_User_Password}-->
    <select id="UserLogin" resultType="org.example.pojo.LoginUserPojo">
        select *
        from loginusertable
        where Login_User_Name = #{param1}
          and Login_User_Password = #{param2}
    </select>

</mapper>

